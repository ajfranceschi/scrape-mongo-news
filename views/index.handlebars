<div class="jumbotron d-flex align-items-center">
    <div class="h1-bg d-flex flex-column justify-content-center align-items-center ">
        <h1 class="whiteTextShadow">Get the News</h1>
        <h4 class="whiteTextShadow"><em>...a la BBC</em></h4>
    </div>

</div>
<div class="container-fluid">
    <div class="row w-100 p-0 m-0">
    {{#unless articlesArray}}
        <h1>Click on Scrape New Articles button to get new articles.</h1>
    {{/unless}}
    {{#each articlesArray}}
        <div class="card w-100 my-2">
            <div class="card-body d-flex">
                <div class="col">
                    <h5 class="card-title">
                        <a href="{{link}}" target="_blank">
                            {{title}}
                        </a>
                    </h5>
                    <p class="card-text">{{summary}}</p>
                    <div class="d-flex align-items-center">
                        <p class="text-muted publishedDate mb-0">
                        <i class="far fa-clock"></i> {{published}}</p>
                        <button class="btn commentsBtn ml-3" data-articleid={{_id}}>Comments</button>
                    </div>
                </div>
<!--                <div class="col-2 d-flex justify-content-end align-items-end commentsBtnWrapper">-->
<!--                    <button class="btn commentsBtn" data-articleid={{_id}}>Comments</button>-->
<!--                </div>-->
            </div>

        </div>
    {{/each}}
    </div>
</div>