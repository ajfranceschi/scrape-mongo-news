<div class="jumbotron d-flex align-items-center">
    <h1 class="d-flex justify-content-center align-items-center whiteTextShadow">Get the News</h1>
</div>
<div class="container-fluid">
    <div class="row w-100 p-0 m-0">
    {{#unless articlesArray}}
        <h1>Click on Scrape New Articles button to get new articles.</h1>
    {{/unless}}
    {{#each articlesArray}}
        <div class="card w-100 my-2">
            <div class="card-body d-flex">
                <div class="col-10">
                    <h5 class="card-title">
                        <a href="{{link}}" target="_blank">
                            {{title}}
                        </a>
                    </h5>
                    <p class="card-text">{{summary}}</p>
                    <p class="text-muted publishedDate mb-0">
                        <i class="far fa-clock"></i> {{hoursAgoPublished}} hours ago</p>

                </div>
                <div class="col-2 d-flex justify-content-end align-items-center">
                    <button class="btn commentsBtn" data-articleid={{_id}}>Comments</button>
                </div>
            </div>

        </div>
    {{/each}}
    </div>
</div>