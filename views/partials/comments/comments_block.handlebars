<div class="commentCard card w-100">
    <div class="d-flex w-100 justify-content-start align-items-center commentDiv">
        <div class="col-10 d-flex align-items-center">
            <p>{{content}}</p>
            <p class="text-muted">{{published}}</p>
        </div>
        <div class="col-2">
            <button class="deleteCommentBtn" data-id="{{id}}">
                <i class="fas fa-trash-alt trashIcon"></i>
            </button>
        </div>
    </div>
</div>